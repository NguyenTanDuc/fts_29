<div class="container">
  <div class="loading">
    <%= image_tag("ajax-loader.gif", alt: "Loading...") %>
  </div>
  <%= form_for @exam do |f| %>
    <div class="col-md-5 col-md-offset-2">
      <%= f.collection_select(:category_id, @categories, :id,
                              :name, {prompt: false},
                              {class: "form-control"}) %>
    </div>
    <div class="col-md-2">
      <%= f.submit t(:submit), class: "btn btn-primary" %>
    </div>
  <% end %>
  <br>
  <br>
  <table class="table table-bordered">
    <tr>
      <th><%= t :date %></th>
      <th><%= t :categories %></th>
      <th><%= t :status %></th>
      <th><%= t :mark %></th>
      <th><%= t :action %></th>
    </tr>
    <%= render @exams %>
  </table>
</div>
